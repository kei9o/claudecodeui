# AWS Configuration
aws_region    = "us-east-1"
key_pair_name = "your-ec2-key-pair-name"  # Required: Create this in EC2 console

# Application Security
session_secret = "change-this-to-a-random-string-use-openssl-rand-hex-32"

# Optional: GitHub OAuth Configuration
# Uncomment and fill these if you want GitHub authentication
# github_client_id     = "your-github-oauth-app-client-id"
# github_client_secret = "your-github-oauth-app-client-secret"
# github_allowed_users = "username1,username2,username3"

# Optional: Custom Domain
# Uncomment if you have a domain to use
# domain_name = "claudecodeui.example.com"

# Optional: Instance Configuration
# Uncomment to customize instance types and pricing
# instance_types  = ["t3.medium", "t3.large", "t3a.medium", "t3a.large"]
# spot_price      = "0.05"
# target_capacity = 1

# Optional: Storage Configuration
# ebs_volume_size = 20

# Optional: Custom S3 Bucket Name
# By default, a bucket will be created with name: claudecodeui-backups-<account-id>
# backup_bucket_name = "my-custom-claudecodeui-backups"

# Optional: SSH Access
# By default, SSH is allowed from anywhere (0.0.0.0/0)
# Restrict to specific IPs for better security
# allowed_ssh_ips = ["1.2.3.4/32", "5.6.7.8/32"]